- if notice
  %p#notice= notice
%h1 Orders
%table
  %thead
    %tr
      %th Name
      %th Address
      %th Email
      %th Pay type
      %th Payment status
      %th Rejection reason
      %th Issuer Response Code
      %th{:colspan => "3"}
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.name
        %td= order.address
        %td= order.email
        %td= order.pay_type
        %td= order.payment_status
        %td= order.issuer_response_code.to_s
        %td= order.reject_reason
        %td= link_to 'Show', order
        %td= link_to 'Edit', edit_order_path(order)
        %td= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Order', new_order_path
